<Screen2>:
    mainw:root.mainw
    MDBoxLayout:
        orientation:'vertical'
        size_hint:1,1
        MDBoxLayout:
            orientation:'vertical'
            size_hint:1,None
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            MDLabel :
                text:'Input Surat Masuk'
                halign: 'center'
                font_style:'H5'
        
        MyMDGridLayout:
            spacing:2
            size_hint:1,.4
            padding:[10,0,0,0]
            cols:2
            rows:6
            nourut:nourut
            MDLabel:
                text :'No Urut'
                size_hint:.3,0
            NoUrut:
                id:nourut
                text:self.parent.listinput[0]
                size_hint:.5,None
                width: '50dp'
                height:'30dp'
                pos : 100,100

            MDLabel:
                text :'Surat Dari'
                size_hint:.3,0
            MDTextFieldRect:
                id:suratdari
                size_hint:1,None
                width: '30dp'
                height:'30dp'

            MDLabel:
                text :'No Surat'
                size_hint:.3,0
            MDTextFieldRect:
                id:nosurat
                size_hint_y: None
                height:'30dp'
        
            MDLabel:
                text :'Tanggal Surat'
                size_hint:.35,0

            MDGridLayout:
                cols:2
                rows:1

                MDTextFieldRect:
                    id:tanggalsurat
                    size_hint:1,None
                    width: '200dp'
                    height:'30dp' 
                    # pos_hint: {'center_x': 0,'center_y': 0.0}

                MDBoxLayout:
                    orientation:'horizontal'
                    padding: (10,0,10,0)
                    size_hint: .5,None
                    height:30
                    MDRaisedButton:
                        size_hint: 1,1
                        # increment_width: "164dp"
                        # width:'100dp'
                        # padding: (100,10,10,10)
                        text:'Klik Tanggal'
                        # size_hint:.2,.3
                        # pos_hint: {'center_x': 0.5,'center_y': 0.0}

            MDLabel:
                text :'Perihal'
                size_hint:.3,0
            MDTextField:
                id:perihal
                multiline: True
                hint_text: "Multi-line text"
                size_hint_y: None
                height:'30dp'
                max_height: "100dp"

        MDBoxLayout:
            orientation:'vertical'
            size_hint:1,.6
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            MDBoxLayout:
                orientation:'horizontal'
                mddata:mddata
                name:'boxlayout'
                MDData:
                    name:'datatable'
                    mainw:root.mainw
                    id:mddata
                    size_hint:.9,1
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                MDBoxLayout:
                    size_hint :.1,None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    orientation:'vertical'
                    MDIconButton:
                        size_hint :.6,None
                        icon: "account-details"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release:mddata.profile()
                    MDIconButton:
                        size_hint :.6,None
                        icon: "plus-circle"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release:mddata.add(nourut,suratdari,nosurat,tanggalsurat,perihal)
                    MDIconButton:
                        size_hint :.6,None
                        icon:'refresh'
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release:mddata.refresh(nourut,suratdari,nosurat,tanggalsurat,perihal)
                    MDIconButton:
                        size_hint :.6,None
                        text: "Delete"
                        icon:'delete'
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        on_release:mddata.delete(nourut,suratdari,nosurat,tanggalsurat,perihal)
